<view class="cu-modal {{showModal?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">{{title}}</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl">
      {{contents}}
    </view>
    <view class="cu-bar bg-white justify-end">
      <view class="action">
        <button class="cu-btn line-green text-green" style="width:200rpx" bindtap="onCancel">取消</button>
        <button class="cu-btn bg-green margin-left" style="width:200rpx" bindtap="onOk">确定</button>

      </view>
    </view>
  </view>
</view>